<Window x:Class="KoboWorklist.EditWorklistItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Worklist Item" Height="600" Width="600">
    <ScrollViewer Margin="0,0,0,0">
        <Grid Margin="10" Height="603">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input fields for editing WorklistItem -->
            <StackPanel Orientation="Vertical" Grid.Row="0">
                <Label Content="Accession Number:"/>
                <TextBox x:Name="AccessionNumberTextBox" Margin="0,0,0,10"/>

                <Label Content="Patient ID:"/>
                <TextBox x:Name="PatientIDTextBox" Margin="0,0,0,10"/>

                <Label Content="Surname:"/>
                <TextBox x:Name="SurnameTextBox" Margin="0,0,0,10"/>

                <Label Content="Forename:"/>
                <TextBox x:Name="ForenameTextBox" Margin="0,0,0,10"/>

                <Label Content="Sex:"/>
                <ComboBox x:Name="SexComboBox" Margin="0,0,0,10"/>

                <Label Content="Date of Birth:"/>
                <TextBox x:Name="DateOfBirthTextBox" Margin="0,0,0,10"/>

                <Label Content="Modality:"/>
                <ComboBox x:Name="ModalityComboBox" Margin="0,0,0,10" />

                <Label Content="Exam Description:"/>
                <TextBox x:Name="ExamDescriptionTextBox" Margin="0,0,0,10"/>

                <Label Content="Study UID:"/>
                <TextBox x:Name="StudyUIDTextBox" Margin="0,0,0,10"/>

                <Label Content="Scheduled AET:"/>
                <TextBox x:Name="ScheduledAETTextBox" Margin="0,0,0,10"/>

                <Label Content="Referring Physician:"/>
                <TextBox x:Name="ReferringPhysicianTextBox" Margin="0,0,0,10"/>

                <Label Content="Exam Date and Time:"/>
                <TextBox x:Name="ExamDateAndTimeTextBox" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Buttons for Save and Cancel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
                <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>